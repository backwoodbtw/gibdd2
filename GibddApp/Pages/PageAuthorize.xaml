<Page x:Class="GibddApp.Pages.PageAuthorize"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GibddApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAuthorize">

    <Grid>
        <StackPanel Margin="100">
            <TextBlock Text="Вход в учетную запись инспектора" FontSize="15" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Логин:" HorizontalAlignment="Center" Margin="15"/>
            <TextBox Name="TxtLogin" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" Width="200"/>

            <TextBlock Text="Пароль:" HorizontalAlignment="Center" Margin="15"/>
            <PasswordBox Name="PsbPassword" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" Width="200"/>

            <Button Content="Войти" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="BtnLogin_Click"/>
        </StackPanel>
        <Frame Name="MainFrame" />
    </Grid>
</Page>
